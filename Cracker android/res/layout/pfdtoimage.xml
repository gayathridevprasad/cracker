<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="30dp"
                  android:gravity="center" android:background="#deddde" >
        <ImageView android:layout_width="44dp" android:layout_height="41dp" android:id="@+id/imageView10"
                   android:src="@drawable/receipt" android:maxHeight="@android:dimen/thumbnail_height"
                   android:maxWidth="@android:dimen/thumbnail_width"/>
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceLarge" android:text="Preview"
                  android:id="@+id/textView48" android:textColor="#eb413c3c"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="fill_parent" android:background="#29A9D2">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_gravity="center_vertical" android:layout_weight="4"
                android:gravity="center">
            <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="0dp"
                    android:id="@+id/imageView8" android:layout_gravity="center"
                    android:layout_weight="9" android:background="#fffbfbff" android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp" android:scaleType="fitXY" android:src="@drawable/output"/>
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="0dp" android:gravity="center" android:layout_weight="1"
                    android:background="@drawable/edit" android:layout_marginLeft="10dp" android:layout_marginRight="10dp"
                    >
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Previous"
                        android:id="@+id/previous" android:background="@drawable/edit1" android:layout_margin="5dp"
                        android:textSize="10dp" android:textStyle="bold"/>
                <Button
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Next"
                        android:id="@+id/next" android:background="@drawable/edit1" android:layout_margin="5dp"
                        android:textStyle="bold" android:textSize="10dp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="0dp"
                android:layout_height="match_parent" android:layout_gravity="center_vertical" android:layout_weight="2"
                 android:gravity="center" android:background="@drawable/edit"
                >
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Print"
                    android:id="@+id/Print_button" android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit1" android:layout_margin="5dp" android:textStyle="bold"
                    android:textSize="12dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View as PDF"
                    android:id="@+id/view_as_pdf" android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit1" android:layout_margin="5dp" android:onClick="view_as_pdf"
                    android:textStyle="bold" android:textSize="12dp"/>
            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main"
                    android:id="@+id/goback" android:layout_gravity="center_horizontal"
                    android:background="@drawable/edit1" android:layout_margin="5dp" android:textStyle="bold"
                    android:textSize="12dp" android:onClick="main"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>