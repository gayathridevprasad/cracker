<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal" android:padding="10dp"
            android:gravity="center">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Code"
                android:id="@+id/textView8" android:textColor="#ff1017ff" android:paddingRight="10dp"
                android:textSize="14dp" android:gravity="center" android:layout_weight="1" android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quantity"
                android:id="@+id/textView9" android:textColor="#ff109e0d"
                android:textSize="14dp" android:gravity="center" android:layout_gravity="right"
                android:layout_weight="1" android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Name"
                android:id="@+id/textView" android:layout_weight="5" android:textColor="#00A7f5"
                android:textSize="14dp" android:gravity="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rate"
                android:id="@+id/textView2" android:layout_weight="1" android:textSize="14dp"
                android:textColor="#f92a3f" android:gravity="center" android:textStyle="bold"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Per"
                android:id="@+id/textView3" android:layout_weight="1" android:textSize="14dp" android:gravity="center"
                android:textStyle="bold" android:textColor="#ce0f1070"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Amount"
                android:id="@+id/textView10" android:textColor="#ff16117c" android:layout_weight="1"
                android:textSize="14dp" android:gravity="center" android:textStyle="bold"/>
    </LinearLayout>
</LinearLayout>