<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent" android:weightSum="1">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="400dp"
            android:layout_height="wrap_content" android:layout_gravity="center_horizontal"
            android:background="#2aa8d3">
        <TextView android:layout_width="fill_parent" android:layout_height="50dp" android:text="EDIT"
                  android:id="@+id/textView5" android:layout_gravity="center_horizontal" android:gravity="center"
                  android:textStyle="bold" android:textSize="20dp" android:textColor="#fffffafe"/>
    </LinearLayout>
    <Space
            android:layout_width="20px"
            android:layout_height="10px"
            />
    <EditText
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:id="@+id/editText6" android:layout_gravity="center_horizontal" android:ellipsize="start"
            android:background="@drawable/edit" android:textSize="20dp" android:layout_weight="0.04"
            android:layout_centerInParent="true"

            android:gravity="center_horizontal"

            android:singleLine="true" android:hint="Quantity"/>
    <Space
            android:layout_width="20px"
            android:layout_height="10px"
            />
    <Button
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:text="OK"
            android:id="@+id/button" android:layout_gravity="center_horizontal" android:textColor="#FFFFFF"
            android:textStyle="bold" android:onClick="edit"/>
    <Space
            android:layout_width="20px"
            android:layout_height="20px"
            />
</LinearLayout>