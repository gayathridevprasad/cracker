<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
              android:orientation="vertical"
            android:fillViewport="true" android:background="#f7f7f7">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#f7f7f7">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton3" android:src="@drawable/back" android:background="#f7f7f7"
                android:onClick="back"/>
        <Space
                android:layout_width="40px"
                android:layout_height="match_parent"
                />
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton4" android:src="@drawable/printer" android:background="#f7f7f7"
                android:onClick="print"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:background="#f7f7f7">




        <ScrollView
                    android:id="@+id/scrollView1"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:fillViewport="true" >
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:background="#f7f7f7">

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@drawable/border_shadow" android:padding="10dp"
                        android:layout_margin="5dp" android:baselineAligned="false">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center_vertical">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Name"
                                android:id="@+id/partyname" android:textStyle="bold" android:textSize="20dp"
                                android:paddingLeft="30dp" android:textColor="#ff000000"/>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center">
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="address:     "
                                android:id="@+id/textView6" android:layout_weight="1" android:gravity="right"/>
                        <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceLarge"
                                android:text="Address"
                                android:id="@+id/partyaddress" android:textSize="20dp" android:textStyle="bold"
                                android:layout_weight="2" android:textColor="#ff000000"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="#f7f7f7"
                        android:paddingTop="10dp" android:paddingLeft="40dp" android:paddingRight="40dp"
                        android:paddingBottom="10dp" >
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:layout_weight="1">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:layout_weight="1"
                                android:paddingBottom="5dp">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="INVOICE NO."
                                    android:id="@+id/textView11" android:textColor="#666666"
                                    android:layout_weight="1" android:textSize="10dp"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="1124"
                                    android:id="@+id/textView12" android:layout_weight="3" android:textColor="#333333"
                                    android:textStyle="bold" android:textSize="12dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:layout_weight="1" android:paddingTop="5dp">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="DATE"
                                    android:id="@+id/textView13" android:textColor="#666666"
                                    android:layout_weight="1" android:textSize="10dp"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="05/06/16"
                                    android:id="@+id/textView14" android:layout_weight="3" android:textColor="#333333"
                                    android:textStyle="bold" android:textSize="12dp"/>
                        </LinearLayout>
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent" android:layout_weight="1">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center|right"
                                android:paddingBottom="5dp">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textView15" android:textColor="#666666" android:layout_weight="3"
                                    android:gravity="right" android:textSize="10dp"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textView16" android:layout_weight="1" android:gravity="right"
                                    android:textSize="12dp"/>
                        </LinearLayout>
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="fill_parent" android:layout_weight="1" android:gravity="right">
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:id="@+id/textView17" android:textColor="#666666" android:layout_weight="3"
                                    android:gravity="right" android:textSize="10dp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:padding="10dp" android:gravity="center_vertical"
                        android:background="#d8e2f1" android:divider="@drawable/invoice_divider"
                        android:showDividers="middle" android:dividerPadding="0dp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="ITEM"
                            android:id="@+id/textView19" android:layout_weight="8" android:textSize="10dp"
                            android:textStyle="bold" android:paddingLeft="30dp" android:textColor="#6f7074"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="TAXABLE"
                            android:id="@+id/textView20" android:layout_weight="1" android:textSize="10dp"
                            android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="QTY"
                            android:id="@+id/textView21" android:layout_weight="1" android:textSize="10dp"
                            android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="PRICE"
                            android:id="@+id/textView22" android:layout_weight="1" android:textSize="10dp"
                            android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:text="AMOUNT"
                            android:id="@+id/textView23" android:layout_weight="2" android:textSize="10dp"
                            android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
                </LinearLayout>
                <ListView
                        android:layout_width="match_parent"
                        android:layout_height="116dp"
                        android:id="@+id/listView2"/>
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" android:padding="10dp">
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="10">
                    </LinearLayout>
                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:layout_weight="3">
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="SUBTOTAL"
                                android:id="@+id/textView24" android:layout_weight="1" android:textColor="#000000"
                                android:textStyle="bold" android:textSize="10dp" android:gravity="right"/>
                        <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:textAppearance="?android:attr/textAppearanceSmall"
                                android:text="Small Text"
                                android:id="@+id/textView25" android:layout_weight="2" android:gravity="center"
                                android:textStyle="bold" android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#ec7a7a7a"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:padding="10dp">
                    <LinearLayout android:orientation="horizontal" android:layout_width="0dp"
                                  android:layout_height="wrap_content" android:layout_weight="10"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="0dp"
                                  android:layout_height="wrap_content" android:layout_weight="3" android:paddingTop="10dp">
                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="0dp"
                                android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="DISCNT"
                                      android:id="@+id/textView26" android:layout_weight="1.5" android:textColor="#000000"
                                      android:textSize="10dp" android:gravity="center"/>
                            <TextView
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:textAppearance="?android:attr/textAppearanceSmall"
                                    android:text="(50%)"
                                    android:id="@+id/textView28" android:layout_weight="1" android:textSize="10dp"
                                    android:textColor="#d6167820" android:textStyle="bold" android:gravity="right"/>
                        </LinearLayout>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="Small Text"
                                  android:id="@+id/textView27" android:layout_weight="2" android:gravity="center"
                                  android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#ec7a7a7a"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:padding="10dp">
                    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:layout_weight="10"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:layout_weight="3" android:paddingTop="10dp">
                        <LinearLayout android:orientation="horizontal" android:layout_width="0dp"
                                      android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center">
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="TAX"
                                      android:id="@+id/textView29" android:layout_weight="1.5" android:textColor="#000000"
                                      android:textSize="10dp" android:gravity="center"/>
                            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                      android:textAppearance="?android:attr/textAppearanceSmall" android:text="(5%)"
                                      android:id="@+id/textView30" android:layout_weight="1" android:textSize="10dp"
                                      android:gravity="center|right" android:textColor="#d6167820" android:textStyle="bold"/>
                        </LinearLayout>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="Small Text"
                                  android:id="@+id/textView31" android:layout_weight="2" android:gravity="center"
                                  android:textColor="#000000"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#ec7a7a7a"/>
                <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                              android:layout_height="wrap_content" android:paddingTop="10dp" android:background="#d8e2f1"
                              android:paddingBottom="10dp" android:padding="10dp">
                    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:layout_weight="10"/>
                    <LinearLayout android:orientation="horizontal" android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:layout_weight="3">
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="TOTAL"
                                  android:id="@+id/textView32" android:layout_weight="1" android:textColor="#000000"
                                  android:textStyle="bold" android:textSize="14dp" android:gravity="center|right"/>
                        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                                  android:textAppearance="?android:attr/textAppearanceSmall" android:text="Small Text"
                                  android:id="@+id/textView33" android:layout_weight="2" android:gravity="center"
                                  android:textStyle="bold" android:textColor="#000000" android:textSize="14dp"/>
                    </LinearLayout>
                </LinearLayout>
                <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:background="#ec7a7a7a"/>
            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</LinearLayout>