<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout android:orientation="horizontal" android:layout_width="match_parent"
                  android:layout_height="wrap_content" android:padding="10dp" android:gravity="center_vertical"
                  android:background="#ffdbdbdb" android:divider="@drawable/invoice_divider" android:showDividers="middle"
                  android:dividerPadding="0dp">
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="ITEM"
                  android:id="@+id/textView34" android:layout_weight="8" android:textSize="10dp"
                  android:textStyle="bold" android:paddingLeft="30dp" android:textColor="#6f7074"/>
        <ImageView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/imageView" android:src="@drawable/tick" android:layout_weight="1"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="QTY"
                  android:id="@+id/textView36" android:layout_weight="1" android:textSize="10dp"
                  android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="PRICE"
                  android:id="@+id/textView37" android:layout_weight="1" android:textSize="10dp"
                  android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
        <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                  android:textAppearance="?android:attr/textAppearanceMedium" android:text="AMOUNT"
                  android:id="@+id/textView38" android:layout_weight="2" android:textSize="10dp"
                  android:textStyle="bold" android:gravity="center" android:textColor="#6f7074"/>
    </LinearLayout>
</LinearLayout>