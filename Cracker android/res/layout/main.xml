<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:swipe="http://schemas.android.com/apk/res/com.example.Custom_list_view"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
        >
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <RadioGroup
                        android:layout_width="0dp"
                        android:id="@+id/rg"
                        android:layout_height="wrap_content" android:orientation="horizontal" android:showDividers="middle"
                        android:gravity="center" android:background="#ffced3c2" android:divider="#ffff130e"
                        android:dividerPadding="10dp" android:layout_weight="9">
                        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                android:text="Invoice" android:textColor="#ffff0600" android:textStyle="bold"
                                     android:checked="false" android:id="@+id/invoice_check"/>
                        <RadioButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                                     android:text="Profoma" android:textColor="#ffff0600" android:textStyle="bold"
                                     android:checked="true" android:id="@+id/profoma_check"/>
                </RadioGroup>
                <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="fill_parent"
                        android:text="Stock"
                        android:id="@+id/switch1" android:background="#ffced3c2" android:checked="false"
                        android:textColor="#ff610004"/>
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:layout_weight="0.75" android:background="#FFFFFF"
            android:gravity="center">
        <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:theme="@style/Autocomplete"
                android:imeOptions="flagNoExtractUi"
                android:id="@+id/editText" android:layout_weight="1" android:hint="id"
                android:textColorHint="#74024a69"
                android:background="@drawable/edit" android:paddingRight="5dp" android:padding="5dp"
                android:layout_margin="5dp" android:textColor="#ff080a43" android:textSize="15dp"
                android:textStyle="bold" android:autoText="false"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:ems="10"
                android:numeric="integer" android:inputType="phone" android:digits="1234567890"
                android:id="@+id/editText2" android:layout_weight="1" android:hint="Quan"
                android:background="@drawable/edit" android:paddingRight="5dp" android:padding="5dp"
                android:layout_margin="5dp" android:textColor="#ff080a43" android:textSize="15dp"
                android:textStyle="bold" android:textColorHint="#74024a69" android:text="0"/>
        <AutoCompleteTextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:imeOptions="flagNoExtractUi"
                android:id="@+id/editText3" android:layout_weight="5" android:hint="Product Name"
                android:background="@drawable/edit" android:padding="5dp" android:layout_margin="5dp"
                android:textColor="#ff080a43" android:textSize="15dp" android:textStyle="bold"
                android:textColorHint="#74024a69"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:inputType="numberDecimal"
                android:ems="10"
                android:id="@+id/editText4" android:layout_weight="1" android:hint="Rate"
                android:background="@drawable/edit" android:padding="5dp" android:layout_margin="5dp"
                android:textColor="#ff080a43" android:textSize="15dp" android:textStyle="bold"
                android:textColorHint="#74024a69" android:text="0.00"/>
        <EditText
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:id="@+id/editText5" android:layout_weight="1" android:hint="Per"
                android:background="@drawable/edit" android:padding="5dp" android:layout_margin="5dp"
                android:textColor="#ff080a43" android:textSize="15dp" android:textStyle="bold"
                android:textColorHint="#74024a69"/>
                <EditText
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/main_stock_box" android:layout_weight="1" android:background="@drawable/edit"
                        android:layout_margin="5dp" android:padding="5dp" android:hint="Stock"
                        android:textColor="#ff080a43" android:textColorHint="#74024a69" android:textSize="15dp"
                        android:textStyle="bold"/>
        </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_gravity="center_horizontal" android:padding="10dp"
            android:background="#2aa8d3" android:baselineAligned="false" android:layout_weight="0.75"
            android:gravity="center">
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Code"
                android:id="@+id/textView8" android:textColor="#FFFFFF" android:paddingRight="10dp"
                android:gravity="center" android:password="false" android:singleLine="true" android:textSize="15dp"
                android:textStyle="bold|italic" android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Quantity"
                android:id="@+id/textView9" android:textColor="#FFFFFF"
                android:gravity="center" android:textSize="15dp" android:textStyle="bold|italic"
                android:layout_weight="1"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Name"
                android:id="@+id/textView" android:layout_weight="5" android:textColor="#FFFFFF"
                android:gravity="center" android:textSize="15dp" android:textStyle="bold|italic"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Rate"
                android:id="@+id/textView2" android:layout_weight="1" android:textSize="15dp"
                android:textColor="#FFFFFF" android:gravity="center" android:textStyle="bold|italic"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Per"
                android:id="@+id/textView3" android:layout_weight="1"  android:gravity="center"
                android:textColor="#FFFFFF" android:textSize="15dp" android:textStyle="bold|italic"/>
        <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Amount"
                android:id="@+id/textView10" android:textColor="#FFFFFF" android:layout_weight="1"
                android:gravity="center" android:textSize="15dp" android:textStyle="bold|italic"/>
    </LinearLayout>

        <com.lion.swipelistview.SwipeListView
                android:id="@+id/listview"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:cacheColorHint="@android:color/transparent"
                android:listSelector="@android:color/transparent"
                swipe:swipeLeftLayout="@layout/leftlayout"
                swipe:swipeRightLayout="@layout/rightlayout"
                android:layout_weight="5.10"
                swipe:swipeRightViewWidth="150" android:background="#FFFFFF"
                android:drawSelectorOnTop="false" android:divider="#ff535353" android:dividerHeight="3dp"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".75" android:background="#2aa8d3" android:paddingLeft="20dp"
                android:paddingRight="20dp">
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView7" android:src="@drawable/cooltext193472216278885"
                        android:layout_gravity="center"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/titems" android:background="#2aa8d3"
                        android:textColor="#ffffffff" android:textStyle="bold" android:gravity="left"
                        android:paddingLeft="10dp"/>
                <Button
                        android:layout_width="0dp"
                        android:layout_weight="4"
                        android:layout_height="wrap_content"
                        android:text="CHECK AND PREVIEW"
                        android:textColor="#FFFFFF"
                        android:id="@+id/imageButton2" android:background="#2aa8d3"
                        android:textStyle="bold" android:textSize="13dp" android:onClick="preview"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Total"
                        android:id="@+id/textView43" android:background="#2aa8d3" android:gravity="center"
                        android:textColor="#ffffffff"/>
                <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:text="Small Text"
                        android:id="@+id/totalamount" android:background="#2aa8d3" android:gravity="left"
                        android:textColor="#ffffffff" android:textStyle="bold"/>
        </LinearLayout>
</LinearLayout>

