<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent"
              android:id="@+id/TopLayout">
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="63dp" android:layout_gravity="center_horizontal" android:padding="5dp"
            android:background="#deddde">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="11" android:gravity="center">
            <ImageView
                    android:layout_width="44dp"
                    android:layout_height="41dp"
                    android:id="@+id/imageView" android:src="@drawable/receipt"
                    android:maxHeight="@android:dimen/thumbnail_height" android:maxWidth="@android:dimen/thumbnail_width"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="BILLING SYSTEM"
                    android:id="@+id/textView" android:textColor="#eb413c3c"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="fill_parent" android:layout_weight="1" android:gravity="center|right"
                >
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton" android:background="#deddde"
                    android:src="@drawable/cogwheel" android:onClick="setting"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="0dp" android:background="#29A9D2"
            android:padding="10dp" android:layout_weight="2">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Start"
                android:id="@+id/textView2" android:textColor="#fffffefa" android:textSize="25dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" android:background="#29A9D2" android:paddingLeft="20dp"
                android:paddingTop="20dp" android:paddingRight="20dp">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton2" android:src="@drawable/invoice" android:background="#29A9D2"
                    android:layout_weight="1" android:onClick="newinvoice"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton4" android:src="@drawable/stock" android:background="#29A9D2"
                    android:layout_weight="1" android:onClick="stock"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/imageButton3" android:src="@drawable/add2" android:background="#29A9D2"
                    android:layout_weight="1" android:onClick="customer"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:weightSum="3"
                android:layout_height="wrap_content" android:background="#29A9D2"
                android:gravity="center" android:paddingLeft="20dp" android:paddingRight="20dp">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Create New Invoice"
                    android:id="@+id/textView3" android:layout_weight="1" android:gravity="top|center"
                    android:textColor="#FFFFFF" android:textSize="12dp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="View Stock Report"
                    android:id="@+id/textView4" android:layout_weight="1" android:gravity="top|center"
                    android:textColor="#FFFFFF" android:textSize="12dp" android:textStyle="bold"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Add new Customor"
                    android:id="@+id/textView5" android:layout_weight="1" android:gravity="top|center"
                    android:textColor="#FFFFFF" android:textSize="12dp" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:padding="20dp" android:background="#29A9D2" android:layout_weight="2">
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent"
                      android:layout_height="wrap_content" android:background="#29A9D2" android:paddingLeft="20dp"
                      android:paddingTop="20dp" android:paddingRight="20dp">
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/imageButton5" android:src="@drawable/view" android:background="#29A9D2"
                         android:layout_weight="1" android:onClick="viewinvoice"/>
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/imageButton6" android:src="@drawable/sales" android:background="#29A9D2"
                         android:layout_weight="1" android:onClick="salesreport"/>
            <ImageButton android:layout_width="wrap_content" android:layout_height="wrap_content"
                         android:id="@+id/imageButton7" android:src="@drawable/about" android:background="#29A9D2"
                         android:layout_weight="1" android:onClick="about"/>
        </LinearLayout>
        <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:weightSum="3"
                      android:layout_height="wrap_content" android:background="#29A9D2" android:gravity="center"
                      android:paddingLeft="20dp" android:paddingRight="20dp">
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="View Invoice"
                      android:id="@+id/textView35" android:layout_weight="1" android:gravity="top|center"
                      android:textColor="#FFFFFF" android:textSize="12dp" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="View Sales Report"
                      android:id="@+id/textView39" android:layout_weight="1" android:gravity="top|center"
                      android:textColor="#FFFFFF" android:textSize="12dp" android:textStyle="bold"/>
            <TextView android:layout_width="0dp" android:layout_height="wrap_content"
                      android:textAppearance="?android:attr/textAppearanceMedium" android:text="About"
                      android:id="@+id/textView40" android:layout_weight="1" android:gravity="top|center"
                      android:textColor="#FFFFFF" android:textSize="12dp" android:textStyle="bold"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>

